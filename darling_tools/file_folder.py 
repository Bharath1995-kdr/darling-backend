import os

async def open_file_by_name(name: str) -> str:
    folders = ["D:/", "C:/Users/Public/Desktop/"]
    name = name.lower()
    for base in folders:
        for root, _, files in os.walk(base):
            for f in files:
                if name in f.lower():
                    try:
                        os.startfile(os.path.join(root, f))
                        return f"üìÇ '{f}' open ‡≤Æ‡≤æ‡≤°‡≤≤‡≤æ‡≤ó‡≤ø‡≤¶‡≥Ü"
                    except:
                        return f"‚ùå '{f}' open ‡≤Æ‡≤æ‡≤°‡≤≤‡≤æ‡≤ó‡≤≤‡≤ø‡≤≤‡≥ç‡≤≤"
    return "‚ö†Ô∏è File ‡≤∏‡≤ø‡≤ó‡≤≤‡≤ø‡≤≤‡≥ç‡≤≤ darling"
